{
  "name": "weekly-work-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "Local-first weekly work tracker with E2E tests",
  "scripts": {
    "serve": "node server.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "PWDEBUG=0 playwright test --headed",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:ci": "playwright test --reporter=line"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@types/node": "^24.3.0"
  }
}
